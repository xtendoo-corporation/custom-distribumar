<odoo>
    <record id="product_template_additional_specs" model="ir.ui.view">
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="additionals_specs" string="Additionals specs">
                    <group>
                        <field name="tare" class="oe_inline"/>
                        <field name="scandall" class="oe_inline" />
                        <field name="lot_name" class="oe_inline" />
                        <field name="scientific_name" class="oe_inline" />
                        <field name="production_method_id" class="oe_inline"/>
                        <field name="conservation_method_id" class="oe_inline"/>
                        <field name="fishing_art_id" class="oe_inline"/>
                        <field name="fao_zone_id" class="oe_inline"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
